extends layout.pug

block content
  script.
      function validateForm() {
        var customerInfo = {
          name: document.forms["customerForm"]["name"].value,
          email: document.forms["customerForm"]["email"].value,
          favoriteBook: document.forms["customerForm"]["favoriteBook"].value
        }
        microsoftTeams.task.complete(customerInfo, "bdc707d5-48e0-48f8-bbe7-6131e0565a4c");
        return false;
    }

  div(class='font-semibold font-title') Enter new customer information:
  form(method='POST' id="customerForm" action='/register' onSubmit="return validateForm()")
    div(style="width: 50%")
      div.form-group(class="form-field-input" style="margin-bottom: 10px; margin-top: 10px")
      label(for='name') Name: 
      input#name.form-control.input-field(type='text', placeholder='first and last' name='name')
      div.form-group(class="form-field-input" style="margin-bottom: 10px;")
      label(for='email') Email: 
      input#email.form-control.input-field(type='email', placeholder='name@email.com' name='email')
      div.form-group(class="form-field-input" style="margin-bottom: 10px;")
      label(for='favoriteBook') Favorite book: 
      input#favoriteBook.form-control.input-field(type='text', placeholder='title of book' name='favoriteBook')
      div.form-group(class="form-field-input" style="margin-bottom: 10px;")
      label(for='pw') Password: 
      input#pw.form-control.input-field(type='password' name='password')
      div.form-group(class="form-field-input" style="margin-bottom: 10px;")
      label(for='pw2') Confirm password: 
      input#pw2.form-control.input-field(type='password' name='confirmPassword' style="margin-bottom: 10px;")
      button.btn.button-primary(type='submit') Sign up
